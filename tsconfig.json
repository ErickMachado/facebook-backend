{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    },
    "types": ["@types/node", "@types/jest"],
    "typeRoots": ["node_modules/@types", "src/@types"],
    "importHelpers": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  }
}
