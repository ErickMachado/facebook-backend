{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    },
    "types": ["@types/node", "@types/jest"],
    "importHelpers": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "tests/**/*.spec.ts"],
  "include": ["src/**/*"]
}
