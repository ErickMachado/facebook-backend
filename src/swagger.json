{
  "info": {
    "contact": {
      "email": "erick.gsmachado@gmail.com"
    },
    "description": "This is the docs for the Facebook API clone made with Node.js.",
    "title": "Facebook API documentation",
    "version": "1.0.0"
  },
  "openapi": "3.0.0",
  "paths": {
    "/auth": {
      "post": {
        "description": "Authenticate user and redirect to application",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "example": {
                  "email": "john.doe@mail.com",
                  "password": "12345678"
                },
                "properties": {
                  "email": {
                    "description": "Previously registered account email",
                    "required": true,
                    "type": "string"
                  },
                  "password": {
                    "description": "Account password",
                    "required": true,
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "summary": "Authenticate",
        "tags": ["Authentication"]
      }
    },
    "/profiles": {
      "get": {
        "description": "Get one profile with all publications",
        "parameters": [
          {
            "description": "A profile uuid",
            "example": "/profiles/a53a8ac3-7c98-4480-bc2c-e308304cf0c1",
            "in": "route",
            "name": "id",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [{ "bearerAuth": [] }],
        "summary": "Get one profile",
        "tags": ["Profile"]
      },
      "post": {
        "description": "Create a new profile",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "example": {
                  "email": "john.doe@mail.com",
                  "name": "Jonh Doe",
                  "username": "john_doe",
                  "redirectLink": "https://facebook.com",
                  "password": "12345678"
                },
                "properties": {
                  "email": {
                    "description": "The e-mail that will be used for authentication.",
                    "required": true,
                    "type": "string"
                  },
                  "name": {
                    "description": "The account owner name.",
                    "required": true,
                    "type": "string"
                  },
                  "password": {
                    "description": "The account password. It will be used for authentication. Should contain at last 8 characteres",
                    "required": true,
                    "type": "string"
                  },
                  "redirectLink": {
                    "description": "The link to the front-end page that will be sending in e-mail.",
                    "required": true,
                    "type": "string"
                  },
                  "username": {
                    "description": "The account alias. It is unique for each user.",
                    "required": true,
                    "type": "string"
                  }
                },
                "type": "object"
              }
            }
          }
        },
        "tags": ["Profile"],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "summary": "Create a profile"
      },
      "patch": {
        "description": "Update profile informations",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "example": {
                  "bio": "Nature lover",
                  "city": "São José dos Campos"
                },
                "properties": {
                  "bio": {
                    "description": "The profile bio that will be displayed",
                    "required": false,
                    "type": "string"
                  },
                  "city": {
                    "description": "The profile owner city",
                    "required": false,
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [{ "bearerAuth": [] }],
        "summary": "Update profile informations",
        "tags": ["Profile"]
      },
      "delete": {
        "description": "Delete a profile and all related publications, comments and likes",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [{ "bearerAuth": [] }],
        "summary": "Delete a profile",
        "tags": ["Profile"]
      }
    },
    "/avatars": {
      "patch": {
        "security": [{ "bearerAuth": [] }],
        "description": "Update the profile picture",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "properties": {
                  "avatar": {
                    "description": "The image blob generated by the front-end.",
                    "format": "binary",
                    "required": true,
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not found"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "summary": "Update the profile avatar",
        "tags": ["Avatar"]
      }
    },
    "/publications": {
      "post": {
        "description": "Create a new publication",
        "requestBody": {
          "content": {
            "multipart/formData": {
              "schema": {
                "example": {
                  "image": "string",
                  "subtitle": "42 is the answer for everything"
                },
                "properties": {
                  "image": {
                    "description": "The image that will be displayed in the publication",
                    "format": "binary",
                    "required": false,
                    "type": "string"
                  },
                  "subtitle": {
                    "description": "The subtitle that will be displayed in the publication",
                    "required": false,
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [{ "bearerAuth": [] }],
        "summary": "Create a publication",
        "tags": ["Publication"]
      }
    },
    "/search": {
      "get": {
        "description": "Get profiles list that matches with the search",
        "parameters": [
          {
            "description": "The profile name",
            "example": "/search?name=john+doe",
            "in": "query",
            "name": "name",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [{ "bearerAuth": [] }],
        "summary": "Get profiles list that matches with the search",
        "tags": ["Search"]
      }
    }
  }
}
